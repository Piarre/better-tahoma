{
  "name": "better-tahoma",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.9",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @better-tahoma/db db:push",
    "db:studio": "turbo -F @better-tahoma/db db:studio",
    "db:generate": "turbo -F @better-tahoma/db db:generate",
    "db:migrate": "turbo -F @better-tahoma/db db:migrate",
    "db:local": "turbo -F @better-tahoma/db db:local",
    "check": "biome check --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@better-tahoma/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@better-tahoma/config": "workspace:*",
    "@biomejs/biome": "^2.2.0",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "bun@1.3.5"
}
